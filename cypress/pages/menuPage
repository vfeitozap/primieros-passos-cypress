class MenuPage {

    menuSelectors() {
        const selectors = {
            adminButton: "[href='/web/index.php/admin/viewAdminModule']",
            pimButton: "[href='/web/index.php/pim/viewPimModule']",
            leaveButton: "[href='/web/index.php/leave/viewLeaveModule']",
            timeButton: "[href='/web/index.php/time/viewTimeModule']",
            recrutimentButton: "[href='/web/index.php/recruitment/viewRecruitmentModule']",
            myInfoButton: "[href='/web/index.php/pim/viewMyDetails']",
            performanceButton: "[href='/web/index.php/recruitment/viewRecruitmentModule']",
            dashboardButton: "[href='/web/index.php/dashboard/index']",
            directoryButton: "[href='/web/index.php/directory/viewDirectory']",
            maintanaceyButton: "[href='/web/index.php/maintenance/viewMaintenanceModule']",
            claimButton: "[[href='/web/index.php/claim/viewClaimModule']",
            buzzButton: "[href='/web/index.php/buzz/viewBuzz']"
        }
        return selectors

    }

    openAdminPage() {
        cy.get(this.menuSelectors().adminButton).click()
    }
    openPimPage() {
        cy.get(this.menuSelectors().pimButton).click()
    }
    openLeavePage() {
        cy.get(this.menuSelectors().leaveButton).click()
    }
    openTimePage() {
        cy.get(this.menuSelectors().timeButton).click()
    }
    openRecrutimentPage() {
        cy.get(this.menuSelectors().recrutimentButton).click()
    }
    openMyInfoPage() {
        cy.get(this.menuSelectors().myInfoButton).click()
    }
    openPerformancePage() {
        cy.get(this.menuSelectors().performanceButton).click()
    }
    openDashboardPage() {
        cy.get(this.menuSelectors().dashboardButton).click()
    }
    openDirectoryPage() {
        cy.get(this.menuSelectors().directoryButton).click()
    }
    openMaintnacePage() {
        cy.get(this.menuSelectors().maintanaceyButton).click()
    }
    openClaimPage() {
        cy.get(this.menuSelectors().claimButton).click()
    }
    openBuzzPage() {
        cy.get(this.menuSelectors().buzzButton).click()
    }
    }

export default MenuPage